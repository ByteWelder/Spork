<manifest package="spork.android.example"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application android:label="@string/app_name"
        android:name=".ExampleApplication"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity android:name="spork.android.example.activities.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="spork.android.example.activities.WelcomeActivity"
            android:label="@string/title_welcome"/>

        <activity android:name="spork.android.example.activities.LoginActivity"
            android:label="@string/title_login"/>

    </application>

</manifest>
